<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.exchange.ExchangeFragment">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="@string/send_crypto"
                android:textColor="#000000"
                android:textSize="34sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="9dp"
                    android:text="Select The Recipient : "
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView35"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/dracula_blue"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_margin="9dp"
                    android:text="@string/name_here" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="9dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_shape5"
                        android:text="@string/add_contract"
                        app:backgroundTint="#FFFFFF" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="9dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="clickBtn_selected"
                        android:background="@drawable/button_selected"
                        android:text="@string/geniee"
                        app:backgroundTint="#FFFFFF"
                         />

                    <Button
                        android:id="@+id/button7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="clickBtn_selected"
                        android:layout_gravity="center"
                        android:layout_margin="9dp"
                        app:backgroundTint="#FFFFFF"
                        android:background="@drawable/button_selected"
                        android:text="@string/hhkim"
                         />

                    <Button
                        android:id="@+id/button11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="clickBtn_selected"
                        android:layout_gravity="center"
                        android:layout_margin="9dp"
                        app:backgroundTint="#FFFFFF"
                        android:background="@drawable/button_selected"
                        android:text="@string/jimmim" />

                    <Button
                        android:id="@+id/button12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="clickBtn_selected"
                        android:layout_gravity="center"
                        android:layout_margin="9dp"
                        app:backgroundTint="#FFFFFF"
                        android:background="@drawable/button_selected"
                        android:text="@string/zoo1" />

                    <Button
                        android:id="@+id/button13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="clickBtn_selected"
                        android:layout_gravity="center"
                        android:layout_margin="9dp"
                        app:backgroundTint="#FFFFFF"
                        android:background="@drawable/button_selected"
                        android:text="@string/chaerin" />


                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/textView33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_margin="9dp"
                android:text="@string/address" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/textView34"
                    android:layout_width="338dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="9dp"
                    android:layout_weight="1"
                    android:text="@string/address_here"
                    android:textColor="@color/dracula_blue"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btScan"
                    style="@style/Widget.AppCompat.ImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="30dp"
                    android:adjustViewBounds="true"
                    android:backgroundTint="#00FFFFFF"
                    android:maxWidth="55dp"
                    android:maxHeight="55dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_scan" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:text="@string/select_crypto"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="9dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/bitcoin_customize"
                        android:background="@drawable/button_selected"
                        android:text="@string/btc"
                        app:backgroundTint="#FFFFFF" />

                    <Button
                        android:id="@+id/button9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_margin="9dp"
                        app:backgroundTint="#FFFFFF"
                        android:drawableLeft="@drawable/ethereum_customize"
                        android:background="@drawable/button_selected"
                        android:text="@string/eth"
                         />

                    <Button
                        android:id="@+id/button14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_margin="9dp"
                        app:backgroundTint="#FFFFFF"
                        android:background="@drawable/button_selected"
                        android:text="@string/bal" />

                    <Button
                        android:id="@+id/button15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_margin="9dp"
                        app:backgroundTint="#FFFFFF"
                        android:background="@drawable/button_selected"
                        android:text="@string/klay" />

                    <Button
                        android:id="@+id/button16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_margin="9dp"
                        app:backgroundTint="#FFFFFF"
                        android:background="@drawable/button_selected"
                        android:text="@string/nec" />
                </LinearLayout>

            </HorizontalScrollView>



            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:text="@string/set_the_amount"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextNumberDecimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:ems="10"
                android:inputType="numberDecimal" />


        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/button_send_crypto"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_margin="16dp"
        android:elevation="9dp"
        android:background="@drawable/button_shape2"
        android:text="@string/send_crypto"
        android:onClick="clickBtn"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:backgroundTint="@color/dracula_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        app:layout_constraintVertical_bias="0.308" />


</androidx.constraintlayout.widget.ConstraintLayout>