<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".wallet_coins">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/your_accounts"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_wallet1"
                    android:layout_width="300dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/button_shape"
                    android:onClick="clickBtn"
                    android:text="@string/ethereum"
                    android:textColor="#000000"
                    android:textAlignment="textStart"
                    app:backgroundTint="#FFFFFF" />

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="596dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_wallet2"
                    android:layout_width="300dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/button_shape"
                    android:onClick="clickBtn"
                    android:textAlignment="textStart"
                    android:text="@string/bitcoin"
                    android:textColor="#000000"
                    app:backgroundTint="#FFFFFF" />

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="596dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_wallet3"
                    android:layout_width="300dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/button_shape"
                    android:onClick="clickBtn"
                    android:textAlignment="textStart"
                    android:text="@string/balancer"
                    android:textColor="#000000"
                    app:backgroundTint="#FFFFFF"
                    tools:context=".ui.wallet.BALWalletFragment" />

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="596dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_wallet4"
                    android:layout_width="300dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/button_shape"
                    android:onClick="clickBtn"
                    android:textAlignment="textStart"
                    android:text="@string/nec"
                    android:textColor="#000000"
                    app:backgroundTint="#FFFFFF"
                    tools:context=".ui.wallet.BALWalletFragment" />

                <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="596dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_wallet5"
                    android:layout_width="300dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/button_shape"
                    android:onClick="clickBtn"
                    android:textAlignment="textStart"
                    android:text="@string/taebit"
                    android:textColor="#000000"
                    app:backgroundTint="#FFFFFF"
                    tools:context=".ui.wallet.BALWalletFragment" />

                <CheckBox
                    android:id="@+id/checkBox5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="596dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_confirm"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:background="@drawable/button_shape2"
        android:text="@string/confirm"
        android:onClick="clickBtn_toast_msg"
        android:textColor="@color/white"
        app:backgroundTint="@color/dracula_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView" />



</androidx.constraintlayout.widget.ConstraintLayout>